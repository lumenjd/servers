#!/bin/sh
cd /data/root/myauthd/build

export CLASSPATH=.:/data/usr/java/jdk1.6.0_12/lib/dt.jar:/data/usr/java/jdk1.6.0_12/lib/tools.jar:/data/usr/java/jdk1.6.0_12/lib/mysql-connector-java-5.0.8-bin.jar

while true; do
java -cp ../lib/jio.jar:../lib/application.jar:../lib/commons-collections-3.1.jar:../lib/commons-dbcp-1.2.1.jar:../lib/commons-pool-1.2.jar:../lib/commons-logging-1.0.4.jar:../lib/log4j-1.2.9.jar:.:$CLASSPATH authd table.xml
sleep 10
done
